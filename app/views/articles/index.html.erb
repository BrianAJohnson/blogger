<div class="jumbotron">
  <div class="container text-center">
    <h1>Articles</h1>

  </div>
</div>
<section class="container">
  <%# Loop throught articles and print out titles %>
  <% @articles.each do |article| %>
  <div class="row">
    <h3 class="col-md-6 text-center">
      <%= link_to article.title, article_path(article) %>
    </h3>
    <h3 class="col-md-6 pull-right">
      <% size = 180%>
      <% if article.body.length < size %>
      <% size = article.body.length %>
      <% end %>
      ' <%= article.body[0..size] %> ...'
    </h3>
  </div>
  <% end %>
</section>
<footer class="bottom-controls">
<%# Adds new article link to page %>
<%= link_to "Create new Article", new_article_path, class: 'new_article btn btn-primary btn-lg ' %>
</footer>
