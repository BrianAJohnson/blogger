<div class="jumbotron">
  <div class="container text-center">
    <h1><%= @article.title %></h1>
    <%= link_to "Edit", edit_article_path(@article), class: "btn btn-primary btn-lg" %>
    <%= link_to "Delete", article_path(@article), method: :delete, data: {confirm: "Really delete the article?"}, class: "btn btn-primary btn-lg" %>

  </div>
</div>

<section class="container text-center">

  <p class="txt-lg"><%= @article.body %></p>
  <br>
  <hr>
  <br>
  <div class="col-lg-6">
    <%= render partial: 'comment/form' %>
  </div>
  <div class="container col-lg-6">

    <% @article.comments.each do |comment| %>
    <h4>Comment by: <%= comment.author_name %></h4>
    <p><%= comment.body %></p>
    <% end %>
  </div>
</section>

<footer class="bottom-controls">
  <%= link_to "Back to Articles", articles_path, class: "btn btn-primary btn-lg" %>
</footer>
